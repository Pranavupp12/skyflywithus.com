// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Blog[]
}

model Booking {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  fromLocation  String
  toLocation    String
  departureDate DateTime
  returnDate    DateTime 
  travelClass   String   
  adults        Int
  infants       Int
  createdAt     DateTime @default(now())
}

model ContactMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   
  email     String   
  company   String?  
  message   String   
  createdAt DateTime @default(now())
}

model Blog {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  slug          String   @unique 
  categories    String[]  
  content       String
  image         String
  focusKeyword  String   @default("")
  metaTitle     String
  metaDesc      String
  metaKeywords  String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  author        User     @relation(fields: [authorId], references: [id])
  authorId      String   @db.ObjectId
  faqs          Faq[]    
}

model Faq {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  question  String
  answer    String
  blog      Blog     @relation(fields: [blogId], references: [id])
  blogId    String   @db.ObjectId
}


